@model List<CarroceriaViewModel>
@{
    ViewData["Title"] = "Carroceria";
    ViewData["SubTitle"] = "Listagem";
    ViewData["AddUrlAction"] = Url.Action("Editar", "Carroceria");
}

<body>
    <div class="text-center">

        <div class="row">
            <div class="col-sm-12 align-self-center">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table user-table">
                            <thead>
                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (CarroceriaViewModel carroceria in Model)
                                {
                                <tr>
                                    <td>@carroceria.NmCarroceria</td>
                                    <td>
                                        <div class="input-group justify-content-md-center">
                                            <div class="btn-group btn-group-sm float-end" role="group">
                                                <a role="button" class="btn btn-primary" asp-route-IdCarroceria="@carroceria.IdCarroceria" asp-controller="Carroceria" asp-action="Editar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs- data-bs-title="Alterar">
                                                    <i class="mdi mdi-grease-pencil"></i>
                                                </a>
                                                <a role="button" class="btn btn-danger" onclick="CarroceriaIndexView.excluirCarroceriaConfirm($(this))" data-idcarroceria="@carroceria.IdCarroceria" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Excluir">
                                                    <i class="mdi mdi-delete-forever"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        Nenhuma carroceria cadastrada!
                    </div>
                }
            </div>
        </div>

    </div>

    @section Scripts {
        <script src="~/js/views/Carroceria/Index.js"></script>
        <script>
            CarroceriaIndexView.urlExcluirCarroceria = '@Url.Action("ExcluirCarroceria")';
        </script>
    }

</body>