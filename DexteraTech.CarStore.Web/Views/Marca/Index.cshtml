@model List<MarcaViewModel>
@{
    ViewData["Title"] = "Marca";
    ViewData["SubTitle"] = "Listagem";
    ViewData["AddUrlAction"] = Url.Action("Editar", "Marca");
}

<body>
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="text-center">

        <div class="row">
            <!-- column -->
            <div class="col-sm-12 align-self-center">
                @if (Model.Any())
                {

                    <div class="table-responsive">
                        <table class="table user-table">
                            <thead>
                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (MarcaViewModel marca in Model)
                                {
                                    <tr>
                                        <td>@marca.NmMarca</td>
                                        <td>
                                            <div class="input-group justify-content-md-center">
                                                <div class="btn-group btn-group-sm float-end" role="group">
                                                    <a role="button" class="btn btn-primary" asp-route-IdMarca="@marca.IdMarca" asp-controller="Marca" asp-action="Editar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs- data-bs-title="Alterar">
                                                        <i class="mdi mdi-grease-pencil"></i>
                                                    </a>
                                                    <a role="button" class="btn btn-danger" onclick="MarcaIndexView.excluirMarcaConfirm($(this))" data-idmarca="@marca.IdMarca" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Excluir">
                                                        <i class="mdi mdi-delete-forever"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        Nenhuma marca cadastrada!
                    </div>
                }
            </div>
        </div>

    </div>

    @section Scripts {
        <script src="~/js/views/marca/index.js"></script>
        <script>
            MarcaIndexView.urlExcluirMarca = '@Url.Action("ExcluirMarca")';
        </script>
    }

</body>