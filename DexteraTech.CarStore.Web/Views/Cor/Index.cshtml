@model List<CorViewModel>
@{
    ViewData["Title"] = "Cor";
    ViewData["SubTitle"] = "Lista";
    ViewData["AddUrlAction"] = Url.Action("Editar", "Cor");
}

<body>
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="text-center">

        <div class="row">
            <!-- column -->
            <div class="col-sm-12 align-self-center">

                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table user-table">
                            <thead>
                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (CorViewModel cor in Model)
                                {
                                    <tr>
                                        <td>@cor.NmCor</td>
                                        <td>
                                            <div class="input-group justify-content-md-center">
                                                <div class="btn-group btn-group-sm float-end" role="group">
                                                    <a role="button" class="btn btn-primary" asp-route-IdCor="@cor.IdCor" asp-controller="Cor" asp-action="Editar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs- data-bs-title="Alterar">
                                                        <i class="mdi mdi-grease-pencil"></i>
                                                    </a>
                                                    <a role="button" class="btn btn-danger" onclick="CorIndexView.excluirCorConfirm($(this))" data-idcor="@cor.IdCor" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Excluir">
                                                        <i class="mdi mdi-delete-forever"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        Nenhuma cor cadastrada!
                    </div>
                }
            </div>
        </div>

    </div>

    @section Scripts {
        <script src="~/js/views/Cor/Index.js"></script>
        <script>
            CorIndexView.urlExcluirCor = '@Url.Action("ExcluirCor")';
        </script>
    }

</body>